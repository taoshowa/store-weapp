/* 一行超出隐藏 */
.singleline {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 两行超出隐藏 */
.twoline {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
/* 三行超出隐藏 */
.threeline {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.fixed-bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  align-items: center;
  z-index: 1994;
}

.button {
  display: flex;
  line-height: normal;
  align-items: center;
  justify-content: center;
  padding: 0;
  border-radius: 0;
  background-color: transparent;
  box-sizing: border-box;
}

.button::before,
.button::after {
  content: none;
}

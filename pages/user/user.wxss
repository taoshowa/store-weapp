/* pages/user/user.wxss */
.user-header {
  display: flex;
  height: 325rpx;
  align-items: center;
  justify-content: center;
}

image {
  width: 100%;
  height: 100%;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  border-radius: 50%;
  margin: 0 20rpx 20rpx;
}

.user-info {
  color: #2d2d2d;
  font-size: 34rpx;
  font-weight: bold;
}

.user-nav {
  height: calc(100vh - 325rpx);
  margin: 0 35rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.nav-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 42rpx 0;
  margin: 0 44rpx;
  border-bottom: 2rpx solid rgba(28, 27, 27, 0.05);
}

.nav-item:last-child {
  border: 0;
}

.item-left {
  display: flex;
  align-items: center;
}

.nav-item .icon {
  width: 68rpx;
  height: 68rpx;
}

.nav-item .text {
  display: flex;
  align-items: center;
  color: #3a3a3a;
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.nav-item .number {
  font-size: 26rpx;
}

.nav-item .arrow {
  width: 17rpx;
  height: 26rpx;
}

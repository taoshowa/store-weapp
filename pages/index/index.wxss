/* index.wxss */
.swiper {
  width: 100%;
  height: 400rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.menu {
  display: flex;
  color: #1e1e1e;
  margin: 34rpx 0 35rpx;
}

.menu-item {
  flex: 0 0 20%;
  padding: 0 2%;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.menu-image {
  width: 82rpx;
  height: 82rpx;
}

.menu-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: bold;
  text-align: center;
}

.product-title {
  padding: 50rpx 28rpx 4rpx;
  background-color: #fff;
}

.product-title .title {
  color: #3a3a3a;
  font-size: 34rpx;
  font-family: PingFangSC-Medium;
  font-weight: bold;
}

.empty {
  font-size: 30rpx;
  padding: 40rpx 40rpx 100rpx 28rpx;
  text-align: center;
  background-color: #fff;
}
